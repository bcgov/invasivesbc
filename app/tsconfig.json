{
  "compilerOptions": {
    "module": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "es5",
      "esnext"
    ],
    "baseUrl": "src",
    "outDir": "dist",
    "jsx": "react-jsx",
    "target": "es5",
    "sourceMap": true,
    "allowJs": false,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": false,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "strictNullChecks": true,
    "isolatedModules": true,
    "noEmit": false,
    "types": [
      "jest",
      "vite/client"
    ],
    "typeRoots": [
      "node_modules/@types",
      "node_modules",
      "src/types"
    ],
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src",
    "**/*.ts"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/node_modules",
    "**/dist"
  ]
}
