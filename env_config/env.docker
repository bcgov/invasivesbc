# This env config should be used when running both the api and app via docker-compose (see Makefile commands).

# ------------------------------------------------------------------------------
# Project Details
# ------------------------------------------------------------------------------
PROJECT_NAME=invasivesbc
VERSION=0.0.1
TAG=all-docker

# ------------------------------------------------------------------------------
# Environment Details
# ------------------------------------------------------------------------------
NODE_ENV=local
REACT_APP_REAL_NODE_ENV=local
ENVIRONMENT=local

# ------------------------------------------------------------------------------
# App
# ------------------------------------------------------------------------------
APP_PORT=8100

# ------------------------------------------------------------------------------
# API
# ------------------------------------------------------------------------------
API_HOST=localhost
API_PORT=7080

# ------------------------------------------------------------------------------
# Postgrest Database
# ------------------------------------------------------------------------------
DB_HOST=db
DB_USER=invasivebc
DB_PASS=postgres
DB_PORT=5432
DB_DATABASE=InvasivesBC
DB_SCHEMA=invasivesbc

# ------------------------------------------------------------------------------
# KeyClock URLS
# ------------------------------------------------------------------------------
APP_CERTIFICATE_URL=APP_CERTIFICATE_URL=https://dev.loginproxy.gov.bc.ca/auth/realms/standard/protocol/openid-connect/certs
APP_CERTIFICATE_URL_TEST=https://oidc.gov.bc.ca/auth/realms/onestopauth-business/protocol/openid-connect/certs

# ------------------------------------------------------------------------------
# Object Store (S3)
# ------------------------------------------------------------------------------
OBJECT_STORE_URL=nrs.objectstore.gov.bc.ca
OBJECT_STORE_ACCESS_KEY_ID=
OBJECT_STORE_SECRET_KEY_ID=
OBJECT_STORE_BUCKET_NAME=

